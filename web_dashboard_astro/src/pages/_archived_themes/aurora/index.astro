---
import AuroraDashboardLayout from "../../layouts/AuroraDashboardLayout.astro";
import GlassCard from "../../components/GlassCard.astro";
import GlassButton from "../../components/GlassButton.astro";
---

<AuroraDashboardLayout title="Dashboard" activeSection="dashboard">
    <div class="aurora-grid">
        <!-- Large Welcome Card -->
        <GlassCard size="large" glow={true}>
            <div class="h-full flex flex-col justify-between">
                <div>
                    <h3
                        class="text-3xl font-bold text-white mb-2"
                        style="font-family: var(--font-heading);"
                    >
                        Welcome Back! üåå
                    </h3>
                    <p class="text-white/80 text-lg mb-6">
                        Your aurora dashboard is looking beautiful today
                    </p>
                </div>
                <div class="space-y-3">
                    <div
                        class="flex items-center justify-between p-4 glass-card"
                    >
                        <span class="font-semibold text-sm text-white/90"
                            >Today's Tasks</span
                        >
                        <span class="text-3xl font-bold text-white">12</span>
                    </div>
                    <div
                        class="flex items-center justify-between p-4 glass-card"
                    >
                        <span class="font-semibold text-sm text-white/90"
                            >Active Projects</span
                        >
                        <span class="text-3xl font-bold text-white">5</span>
                    </div>
                </div>
            </div>
        </GlassCard>

        <!-- Stat Cards -->
        <GlassCard size="small">
            <div class="flex flex-col h-full justify-between">
                <i class="fas fa-users text-4xl text-white/80 mb-3"></i>
                <div>
                    <h4
                        class="text-sm font-semibold text-white/70 uppercase mb-1"
                    >
                        Total Users
                    </h4>
                    <p class="text-4xl font-bold text-white">1,234</p>
                </div>
            </div>
        </GlassCard>

        <GlassCard size="small">
            <div class="flex flex-col h-full justify-between">
                <i class="fas fa-calendar-alt text-4xl text-white/80 mb-3"></i>
                <div>
                    <h4
                        class="text-sm font-semibold text-white/70 uppercase mb-1"
                    >
                        Events
                    </h4>
                    <p class="text-4xl font-bold text-white">42</p>
                </div>
            </div>
        </GlassCard>

        <GlassCard size="small">
            <div class="flex flex-col h-full justify-between">
                <i class="fas fa-dollar-sign text-4xl text-white/80 mb-3"></i>
                <div>
                    <h4
                        class="text-sm font-semibold text-white/70 uppercase mb-1"
                    >
                        Revenue
                    </h4>
                    <p class="text-4xl font-bold text-white">$12.5K</p>
                </div>
            </div>
        </GlassCard>

        <GlassCard size="small">
            <div class="flex flex-col h-full justify-between">
                <i class="fas fa-arrow-up text-4xl text-white/80 mb-3"></i>
                <div>
                    <h4
                        class="text-sm font-semibold text-white/70 uppercase mb-1"
                    >
                        Growth
                    </h4>
                    <p class="text-4xl font-bold text-white">+24%</p>
                </div>
            </div>
        </GlassCard>

        <!-- Quick Actions -->
        <GlassCard size="full">
            <h3
                class="text-lg font-bold text-white mb-4"
                style="font-family: var(--font-heading);"
            >
                ‚ö° Quick Actions
            </h3>
            <div class="flex flex-wrap gap-3">
                <GlassButton icon="fas fa-plus">New User</GlassButton>
                <GlassButton icon="fas fa-calendar">Create Event</GlassButton>
                <GlassButton icon="fas fa-file-export">Export Data</GlassButton>
                <GlassButton icon="fas fa-chart-bar">View Reports</GlassButton>
            </div>
        </GlassCard>

        <!-- Recent Activity -->
        <GlassCard size="medium">
            <h3
                class="text-md font-bold text-white mb-3"
                style="font-family: var(--font-heading);"
            >
                üìä Recent Activity
            </h3>
            <div class="space-y-2">
                <div class="p-3 glass-card">
                    <p class="text-sm font-semibold text-white">
                        New user registered
                    </p>
                    <p class="text-xs text-white/60">2 minutes ago</p>
                </div>
                <div class="p-3 glass-card">
                    <p class="text-sm font-semibold text-white">
                        Event published
                    </p>
                    <p class="text-xs text-white/60">15 minutes ago</p>
                </div>
            </div>
        </GlassCard>

        <!-- System Status -->
        <GlassCard size="medium">
            <h3
                class="text-md font-bold text-white mb-3"
                style="font-family: var(--font-heading);"
            >
                üîß System Status
            </h3>
            <div class="space-y-3">
                <div class="flex items-center justify-between">
                    <span class="text-sm font-semibold text-white/80">API</span>
                    <span class="glass-badge glass-badge-success">Online</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm font-semibold text-white/80"
                        >Database</span
                    >
                    <span class="glass-badge glass-badge-success">Online</span>
                </div>
            </div>
        </GlassCard>

        <!-- Top Performers -->
        <GlassCard size="medium">
            <h3
                class="text-md font-bold text-white mb-3"
                style="font-family: var(--font-heading);"
            >
                ‚≠ê Top Performers
            </h3>
            <div class="space-y-3">
                <div class="flex items-center gap-3">
                    <div
                        class="w-10 h-10 glass-card flex items-center justify-center font-bold text-white"
                    >
                        1
                    </div>
                    <div class="flex-1">
                        <p class="text-sm font-semibold text-white">John Doe</p>
                        <p class="text-xs text-white/60">95 points</p>
                    </div>
                </div>
            </div>
        </GlassCard>
    </div>
</AuroraDashboardLayout>

<style>
    @import url("../../styles/glassmorphism.css");
</style>
