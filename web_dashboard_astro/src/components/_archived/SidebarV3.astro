---
const menuItems = [
    { id: 'overview', label: 'Dashboard', icon: 'fas fa-th-large', href: '/dashboard/v3' },
    { id: 'students', label: 'Students', icon: 'fas fa-user-graduate', href: '#' },
    { id: 'events', label: 'Events', icon: 'fas fa-calendar-day', href: '#' },
    { id: 'analytics', label: 'Analytics', icon: 'fas fa-chart-area', href: '#' },
    { id: 'ai', label: 'AI Insights', icon: 'fas fa-robot', href: '#', badge: 'New' },
];

const systemItems = [
    { id: 'settings', label: 'Settings', icon: 'fas fa-cog', href: '#' },
    { id: 'support', label: 'Support', icon: 'fas fa-headset', href: '#' },
];

interface Props {
    activeSection?: string;
}

const { activeSection = 'overview' } = Astro.props;
---

<aside class="hidden lg:flex flex-col w-72 h-screen bg-[#0F172A] text-slate-300 flex-shrink-0 transition-all duration-300 border-r border-slate-800/50 relative z-20">
    
    <!-- Brand Header -->
    <div class="h-20 flex items-center px-8 border-b border-slate-800/50">
        <div class="flex items-center gap-3">
            <div class="w-9 h-9 bg-gradient-to-tr from-indigo-500 to-purple-500 rounded-xl flex items-center justify-center shadow-lg shadow-indigo-500/20 text-white">
                <i class="fas fa-bolt"></i>
            </div>
            <div>
                <h1 class="font-bold text-white text-lg tracking-tight">Talent<span class="text-indigo-400">Flow</span></h1>
                <p class="text-[10px] font-medium text-slate-500 uppercase tracking-wider">Admin Suite</p>
            </div>
        </div>
    </div>

    <!-- Navigation -->
    <div class="flex-1 overflow-y-auto py-6 px-4 space-y-8">
        
        <!-- Main Menu -->
        <div>
            <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-4 px-4">Main Menu</h3>
            <ul class="space-y-1">
                {menuItems.map(item => (
                    <li>
                        <a href={item.href} class={`flex items-center justify-between px-4 py-3 rounded-xl transition-all duration-200 group ${activeSection === item.id ? 'bg-indigo-500/10 text-white shadow-sm shadow-indigo-500/5' : 'hover:bg-slate-800/50 hover:text-white'}`}>
                            <div class="flex items-center gap-3">
                                <span class={`w-5 text-center transition-colors ${activeSection === item.id ? 'text-indigo-400' : 'text-slate-500 group-hover:text-slate-300'}`}>
                                    <i class={item.icon}></i>
                                </span>
                                <span class="font-medium text-sm">{item.label}</span>
                            </div>
                            {item.badge && (
                                <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-indigo-500 text-white shadow-sm">{item.badge}</span>
                            )}
                        </a>
                    </li>
                ))}
            </ul>
        </div>

        <!-- System Menu -->
        <div>
            <h3 class="text-xs font-bold text-slate-500 uppercase tracking-wider mb-4 px-4">System</h3>
            <ul class="space-y-1">
                {systemItems.map(item => (
                    <li>
                        <a href={item.href} class="flex items-center gap-3 px-4 py-3 rounded-xl transition-all duration-200 hover:bg-slate-800/50 hover:text-white group">
                            <span class="w-5 text-center text-slate-500 group-hover:text-slate-300 transition-colors">
                                <i class={item.icon}></i>
                            </span>
                            <span class="font-medium text-sm">{item.label}</span>
                        </a>
                    </li>
                ))}
            </ul>
        </div>
    </div>

    <!-- User Profile (Footer) -->
    <div class="p-4 border-t border-slate-800/50 bg-[#0B1120]">
        <div class="flex items-center gap-3 p-3 rounded-xl bg-slate-800/50 border border-slate-700/50 cursor-pointer hover:border-indigo-500/30 transition-colors group">
            <div class="w-10 h-10 rounded-full bg-slate-700 flex items-center justify-center text-slate-300 text-xs font-bold ring-2 ring-[#0B1120] group-hover:ring-indigo-500/20 transition-all">
                AD
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-white truncate">Administrator</p>
                <p class="text-xs text-slate-500 truncate">admin@uthm.edu.my</p>
            </div>
            <button class="text-slate-500 hover:text-red-400 transition-colors p-1">
                <i class="fas fa-sign-out-alt"></i>
            </button>
        </div>
    </div>
</aside>

<!-- Mobile Header (Visible only on mobile) -->
<div class="lg:hidden h-16 bg-[#0F172A] flex items-center justify-between px-4 sticky top-0 z-50 border-b border-slate-800">
    <div class="flex items-center gap-3">
        <button id="mobile-toggle" class="text-slate-300 p-2 hover:text-white">
            <i class="fas fa-bars text-lg"></i>
        </button>
        <span class="font-bold text-white text-lg">TalentFlow</span>
    </div>
    <div class="w-8 h-8 rounded-full bg-indigo-500 flex items-center justify-center text-white text-xs font-bold">
        A
    </div>
</div>

<!-- Mobile Sidebar Overlay & Drawer -->
<div id="mobile-overlay" class="fixed inset-0 bg-slate-900/80 backdrop-blur-sm z-40 hidden opacity-0 transition-opacity duration-300"></div>
<div id="mobile-sidebar" class="fixed inset-y-0 left-0 w-72 bg-[#0F172A] z-50 transform -translate-x-full transition-transform duration-300 shadow-2xl flex flex-col">
    <!-- Close Button -->
    <div class="flex justify-end p-4">
        <button id="mobile-close" class="text-slate-400 hover:text-white p-2">
            <i class="fas fa-times text-xl"></i>
        </button>
    </div>
    
    <!-- Reuse Content Logic (Simplified for Mobile) -->
    <div class="flex-1 px-6 py-2">
        <h1 class="font-bold text-white text-xl mb-8">Menu</h1>
        <ul class="space-y-4">
            {menuItems.map(item => (
                <li>
                    <a href={item.href} class="flex items-center gap-4 text-slate-300 hover:text-white text-lg">
                        <i class={`${item.icon} w-6 text-center text-indigo-400`}></i>
                        {item.label}
                    </a>
                </li>
            ))}
            <li class="pt-4 border-t border-slate-800"></li>
             {systemItems.map(item => (
                <li>
                    <a href={item.href} class="flex items-center gap-4 text-slate-300 hover:text-white text-lg">
                        <i class={`${item.icon} w-6 text-center text-slate-500`}></i>
                        {item.label}
                    </a>
                </li>
            ))}
        </ul>
    </div>
</div>

<script>
    const toggle = document.getElementById('mobile-toggle');
    const close = document.getElementById('mobile-close');
    const overlay = document.getElementById('mobile-overlay');
    const sidebar = document.getElementById('mobile-sidebar');

    function toggleMobileMenu() {
        const isHidden = sidebar?.classList.contains('-translate-x-full');
        
        if (isHidden) {
            sidebar?.classList.remove('-translate-x-full');
            overlay?.classList.remove('hidden');
            setTimeout(() => overlay?.classList.remove('opacity-0'), 10);
        } else {
            sidebar?.classList.add('-translate-x-full');
            overlay?.classList.add('opacity-0');
            setTimeout(() => overlay?.classList.add('hidden'), 300);
        }
    }

    toggle?.addEventListener('click', toggleMobileMenu);
    close?.addEventListener('click', toggleMobileMenu);
    overlay?.addEventListener('click', toggleMobileMenu);
</script>
